	<table id="MenuTable" cellpadding="0" cellspacing="0" >
		<tr>
			<td><a href="#tabs-general">General Information</a></td>
			<td><a href="#tabs-values">Values to report</a></td>
			<td><a href="#tabs-print">Print configuration</a></td>
			<% unless @wheel.new_record? %>
				<td><a href="#tabs-cover">Cover</a></td>
			<% end %>
			<td><a href="#tabs-sms">SMS interaction</a></td>
			<td><a href="#tabs-voice">Voice interaction</a></td>
		</tr>
	</table>
	-->

	<div class="menu_content">
		<div id="tabs-general">
			<%= render :partial => 'general', :locals => {:f => f} %>
		</div>
		<div id="tabs-values">
			<%= render :partial => 'values', :locals => {:f => f} %>
		</div>
		<div id="tabs-print">
			<%= render :partial => 'print_configuration', :locals => {:f => f} %>
		</div>
		<% unless @wheel.new_record? %>
			<div id="tabs-cover">
				<%= render :partial => 'cover', :locals => {:f => f} %>
			</div>
		<% end %>
		<div id="tabs-sms">
			<%= render :partial => 'sms_interaction', :locals => {:f => f} %>
		</div>
		<div id="tabs-voice">
			<%= render :partial => 'voice_interaction', :locals => {:f => f} %>
		</div>
    </div><!-- /menu_content --> 
    
    <div class="butt_create">
		<%= link_to '<span class="butt_cancel"></span>', :controller => :wheel, :action => :index %>
		<% if @wheel.new_record? %>
    		<a id="submit"><span class="butt_create_wheel"></span></a>
		<% else %>
			<%= button_to_function 'Update', "should_recalculate_factors(#{@wheel.id})" %>
		<% end %>
    </div><!-- /butt_create -->            


</div><!-- /Main_Table -->


