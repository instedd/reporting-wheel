<% if !flash[:notice].nil? %>
	<div id="notice"><%= flash[:notice] %></div>
<% end %>

<h4>Wheels</h4>

<table>
	<tr>
		<th>Name</th>
		<th>Actions</th>
	</tr>
	<% @wheels.each do |wheel| %>
		<tr>
			<td><strong><%= wheel.name %></strong></td>
			<td>
			  <%= link_to 'view', :action => :show, :id => wheel.id %>
			  <%= link_to 'edit', :action => :edit, :id => wheel.id %>
			  <%= link_to 'preview', :action => :draw_preview, :id => wheel.id %>
			  <%= link_to 'download', :action => :draw, :id => wheel.id %>
			  <%= link_to 'delete', {:action => :delete, :id => wheel.id}, :confirm => "Are you sure you want to delete the wheel #{wheel.name}?" %>
			  <%= link_to 'records', {:controller => :wheel_record, :action => :index, :id => wheel.id} %>
			</td>
		</tr>
	<% end %>
</table>

<br/>

<%= link_to 'Create a new Whee!', :action => :new %>
