.row-fluid
  .span12
    = form_for @user do |f|
      = f.error_messages
      .title_two Leave blank if you don't want to change the password.
      .control-group
        = f.label :password, :class => 'control-label'
        .controls
          = f.password_field :password, :autocomplete => :off, :class => "medsize"
      .control-group
        = f.label :password_confirmation, :class => 'control-label'
        .controls
          = f.password_field :password_confirmation, :autocomplete => :off, :class => "medsize"
      %hr
      .control-group
        .controls
          %a.btn.btn-primary#submit
            Update
          = link_to 'Cancel', root_url, :class => 'btn btn-link'
